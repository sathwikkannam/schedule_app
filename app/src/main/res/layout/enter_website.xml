<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444243">

    <EditText
        android:id="@+id/EditText12"
        android:layout_width="282dp"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:autofillHints="no"
        android:textColor="#fcf9fb"
        android:textColorHint="#fcf9fb"
        android:background="@drawable/corner"
        android:hint="  https://schema.hkr.se..."
        android:inputType="textWebEmailAddress">

    </EditText>

    <Button
        android:id="@+id/buttonf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EditText12"
        android:layout_centerInParent="true"
        android:backgroundTint="#1cd82b" />

    <ProgressBar
        android:id="@+id/loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_above="@+id/EditText12"
        android:layout_marginBottom="25dp"
        android:indeterminateTint="#1cd82b"
    />

</RelativeLayout>