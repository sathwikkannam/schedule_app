<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/object_layout"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textAlignment="center"
        android:layout_marginStart="60dp"
        android:id="@+id/WeekAndMonth"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/week"
            android:id="@+id/WeekAndMonthView"
            android:textStyle="bold"
/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/test">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/TimeLineDate"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sun"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/platinum"
                    android:textAlignment="center"
                    android:id="@+id/Day"/>


                <TextView
                    android:id="@+id/Date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif"
                    android:text="25"
                    android:textAlignment="center"
                    android:textColor="@color/platinum"
                    android:textSize="20sp" />

            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/TimeLineSchedule"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/darkGrey">

            <TextView
                android:id="@+id/Duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/habibi"
                android:text="@string/duration"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                android:textColor="@color/Yellow"/>

            <View
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/platinum"
                android:id="@+id/status"
                android:background="@drawable/circle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/Course"
                android:background="@color/lightGrey"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="12dp"
                android:id="@+id/Line"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Line"
                android:text="@string/teacher"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/habibi"
                android:textSize="17sp"
                android:id="@+id/Teacher"
                android:textColor="@color/platinum"/>


            <TextView
                android:id="@+id/Room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Line"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/habibi"
                android:text="@string/room"
                android:textSize="17sp"
                android:textColor="@color/platinum"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Duration"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:text="@string/program"
                android:textSize="20sp"
                android:id="@+id/Course"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/habibi"
                android:textColor="@color/platinum"/>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>